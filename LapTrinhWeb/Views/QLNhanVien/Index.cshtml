@model IEnumerable<LapTrinhWeb.tblNhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm rounded-pill px-3">
            + Thêm nhân viên mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 text-center">Tên nhân viên</th>
                        <th class="border-0 text-center">Giới tính</th>
                        <th class="border-0 text-center">Năm sinh</th>
                        <th class="border-0 text-center">Vai trò</th>
                        <th class="border-0 text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @item.TenNV
                                </div>
                            </td>
                            <td>@item.GioiTinh</td>
                            <td class="text-center">@item.NamSinh</td>
                            <td>
                                <span class="badge @(item.VaiTro == 1 ? "bg-danger" : "bg-info") text-white">
                                    @(item.tblVaiTro != null ? item.tblVaiTro.TenVaiTro : "Chưa rõ")
                                </span>
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("Edit", new { id = item.MaNV })" class="btn btn-outline-warning btn-sm border-0" title="Sửa vai trò">
                                    Phân quyền
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.MaNV })" class="btn btn-outline-danger btn-sm border-0" title="Xóa">
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

