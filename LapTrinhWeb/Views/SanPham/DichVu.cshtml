@model List<tblDichVu>
@{
    ViewBag.Title = "Dịch vụ";
    Layout = "~/Views/Shared/_LayoutBH.cshtml";
}


<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
        <li class="breadcrumb-item active">Dịch vụ</li>
    </ol>
</nav>


<div class="row mb-4">
    <div class="col-12 text-center">
        <h1 class="h2 text-primary mb-2">Dịch vụ thú cưng</h1>
        <p class="text-muted">Chăm sóc toàn diện cho người bạn bốn chân của bạn</p>
    </div>
</div>


<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var dv in Model)
        {
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card service-card h-100 shadow-sm">
                    <div class="card-body p-3">
                        <div class="service-icon mb-2">
                            <i class="fas fa-paw text-primary fa-lg"></i>
                        </div>
                        <h5 class="card-title text-dark mb-2" style="font-size: 1.1rem;">@dv.TenDV</h5>
                        <p class="card-text text-muted small mb-3">@dv.MoTa</p>
                        <div class="service-price">
                            <span class="h5 text-danger">@string.Format("{0:#,##0} đ", dv.GiaDichVu)</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent py-2">
                        <div class="d-grid gap-1">
                            <button class="btn btn-primary btn-sm btn-book-service" data-service-id="@dv.MaDV" data-service-name="@dv.TenDV">
                                <i class="fas fa-calendar-plus me-1"></i>Đặt lịch
                            </button>
                            <button class="btn btn-outline-secondary btn-sm btn-service-detail" data-service-id="@dv.MaDV">
                                <i class="fas fa-info-circle me-1"></i>Chi tiết
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center">
            <div class="alert alert-warning py-4">
                <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                <h5>Hiện chưa có dịch vụ nào</h5>
                <p class="mb-0">Vui lòng quay lại sau!</p>
            </div>
        </div>
    }
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="bg-light p-4 rounded text-center">
            <h4 class="mb-2">Cần tư vấn thêm về dịch vụ?</h4>
            <p class="mb-3 small">Đội ngũ chuyên gia của chúng tôi luôn sẵn sàng hỗ trợ bạn</p>
            <div class="d-flex justify-content-center gap-2 flex-wrap">
                <a href="tel:18004635" class="btn btn-success btn-sm">
                    <i class="fas fa-phone me-1"></i>Gọi ngay: 1800 4635
                </a>
                <button class="btn btn-outline-primary btn-sm" id="btnConsult">
                    <i class="fas fa-comments me-1"></i>Chat tư vấn
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .service-card {
        border: none;
        border-radius: 10px;
        transition: all 0.3s ease;
        border-left: 3px solid #3498db;
    }

        .service-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1) !important;
        }

    .service-icon {
        text-align: center;
    }

    .service-price {
        text-align: center;
        padding: 8px 0;
    }

    .card-title {
        font-weight: 600;
        margin-bottom: 10px;
        min-height: 40px;
        line-height: 1.3;
    }

    .card-text {
        min-height: 60px;
        margin-bottom: 15px;
        line-height: 1.4;
    }

    .btn-book-service {
        font-weight: 500;
        font-size: 0.85rem;
    }

    .bg-light {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .h2 {
            font-size: 1.5rem;
        }

        .btn-sm {
            font-size: 0.8rem;
            padding: 6px 12px;
        }

        .d-flex.justify-content-center {
            flex-direction: column;
            gap: 8px;
        }

        .card-body {
            padding: 15px !important;
        }
    }
</style>

