
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBH.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 500px;">
        <div class="card-header bg-primary text-white text-center fw-bold">
            ĐĂNG KÝ THÀNH VIÊN
        </div>

        <div class="card-body">

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @using (Html.BeginForm("XuLyDangKy", "DangKy", FormMethod.Post))
            {
                <div class="mb-3">
                    <label class="form-label">Họ tên khách hàng</label>
                    <input type="text" name="TenKH" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <input type="password" name="MatKhau" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Nhập lại mật khẩu</label>
                    <input type="password" name="ReMatKhau" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Địa chỉ</label>
                    <input type="text" name="DiaChi" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Điện thoại</label>
                    <input type="text" name="DienThoai" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Giới tính</label>
                    <select name="GioiTinh" class="form-control">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Năm sinh</label>
                    <input type="number" name="NamSinh" class="form-control" />
                </div>

                <button type="submit" class="btn btn-success w-100 fw-bold">Đăng ký</button>
            }
        </div>
    </div>
</div>