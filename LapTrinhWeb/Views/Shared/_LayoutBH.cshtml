@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>36.PET</title>
        <link rel="stylesheet" href="styles.css" />
        <link href="~/Content/Css/StyleSheet1.css" rel="stylesheet" />
        <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <header class="site-header">
        <div class="container header-inner">
            <a href="@Url.Action("Index", "Home ")" class="logo">36<span>.PET</span></a>

            <nav class="navbar navbar-expand-lg main-nav">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "SanPham")">Trang chủ</a>
                        </li>

                        <!-- Chó -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "SanPham", new { loai = "Cho" })">Chó</a>
                        </li>

                        <!-- Mèo -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "SanPham", new { loai = "Meo" })">Mèo</a>
                        </li>

                        <!-- Thức ăn -->
                        <li class=" dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="thucanDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Thức ăn
                            </a>
                            <div class="dropdown-content" aria-labelledby="thucanDropdown">
                                <a class="dropdown-item" href="@Url.Action("Index", "SanPham", new { loai = "ThucAnCho" })">Thức ăn cho chó</a>
                                @*<a class="dropdown-item" href="@Url.Action("Index", "SanPham", new { loai = "ThucAnMeo" })">Thức ăn cho mèo</a>*@
                                <a class="dropdown-item" href="@Url.Action("Index", "SanPham", new { loai = "Pate" })">Pate mèo </a>

                            </div>
                        </li>

                        <!-- Phụ kiện -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="phukienDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Phụ kiện
                            </a>
                            <div class="dropdown-content" aria-labelledby="phukienDropdown">
                                <a class="dropdown-item" href="@Url.Action("Index", "SanPham", new { loai = "DoCho" })">Đồ chơi</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "SanPham", new { loai = "DayDat" })">Dây dắt, vòng cổ</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "SanPham", new { loai = "QuanAo" })">Quần áo</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "SanPham", new { loai = "ChuongNgu" })">Chuồng, nệm ngủ</a>
                            </div>
                        </li>

                        <!-- Dịch vụ -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DichVu", "SanPham")">Dịch vụ</a>
                        </li>


                    </ul>
                </div>
            </nav>

            <!--Tìm kiếm-->
            <form class="form-inline search-box" action="@Url.Action("Index", "SanPham")" method="get">
                <input class="form-control"
                       type="search"
                       name="searchString"
                       placeholder="Tìm sản phẩm..."
                       value="@ViewBag.SearchString" />

                <button class="btn btn-outline-success" type="submit">Tìm</button>
            </form>

            <!--Đăng nhập-->
            <div class="login">
                @if (Session["TenKH"] == null)
                {
                    <!-- Chưa đăng nhập -->
                    <a href="@Url.Action("Index", "DangNhap", new { returnUrl = Request.RawUrl })">
                        <button type="button" class="btn btn-success">Đăng nhập</button>
                    </a>
                }
                else
                {
                    <!-- Đã đăng nhập -->
                    <div class="dropdown">
                        <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                            @Session["TenKH"]
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="/DangNhap/Logout">Đăng xuất</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>


        </div>
    </header>


    <div>
        @RenderBody()
    </div>
    <!-- FOOTER -->
    <footer style="background-color: #343a40; color: #f8f9fa; font-size: 0.95rem; padding: 40px 20px;">
        <div style="max-width: 1200px; margin: auto;">
            <div style="display: flex; flex-wrap: wrap; gap: 40px; justify-content: space-between;">
                <!-- Thông tin cửa hàng -->
                <div style="flex: 1; min-width: 200px;">
                    <h4 style="margin-bottom: 15px;">PetShop</h4>
                    <p>Địa chỉ: 140 Lê Trọng Tấn, Tây Thạnh, Tân Phú, TP. Hồ Chí Minh</p>
                    <p>Điện thoại: (+84) 1800 4635</p>
                    <p>Email: contact@petshop.vn</p>
                </div>

                <!-- Hỗ trợ khách hàng -->
                <div style="flex: 1; min-width: 200px;">
                    <h4 style="margin-bottom: 15px;">Hỗ trợ khách hàng</h4>
                    <p>Thứ 2 - Thứ 6: 9:00 - 20:00</p>
                    <p>Thứ 7: 11:00 - 15:00</p>
                    <p>Chủ nhật: Đóng cửa</p>
                </div>

                <!-- Khám phá -->
                <div style="flex: 1; min-width: 200px;">
                    <h4 style="margin-bottom: 15px;">Khám phá</h4>
                    <p><a href="#" style="color: #f8f9fa; text-decoration: none;" onmouseover="this.style.textDecoration='underline'; this.style.color='#ffc107'" onmouseout="this.style.textDecoration='none'; this.style.color='#f8f9fa'">Về chúng tôi</a></p>
                    <p><a href="#" style="color: #f8f9fa; text-decoration: none;" onmouseover="this.style.textDecoration='underline'; this.style.color='#ffc107'" onmouseout="this.style.textDecoration='none'; this.style.color='#f8f9fa'">Sản phẩm</a></p>
                    <p><a href="#" style="color: #f8f9fa; text-decoration: none;" onmouseover="this.style.textDecoration='underline'; this.style.color='#ffc107'" onmouseout="this.style.textDecoration='none'; this.style.color='#f8f9fa'">Tin tức & sự kiện</a></p>
                    <p><a href="#" style="color: #f8f9fa; text-decoration: none;" onmouseover="this.style.textDecoration='underline'; this.style.color='#ffc107'" onmouseout="this.style.textDecoration='none'; this.style.color='#f8f9fa'">Hệ thống cửa hàng</a></p>
                </div>

                <!-- Dịch vụ -->
                <div style="flex: 1; min-width: 200px;">
                    <h4 style="margin-bottom: 15px;">Dịch vụ</h4>
                    <p><a href="#" style="color: #f8f9fa; text-decoration: none;" onmouseover="this.style.textDecoration='underline'; this.style.color='#ffc107'" onmouseout="this.style.textDecoration='none'; this.style.color='#f8f9fa'">Trung tâm trợ giúp</a></p>
                    <p><a href="#" style="color: #f8f9fa; text-decoration: none;" onmouseover="this.style.textDecoration='underline'; this.style.color='#ffc107'" onmouseout="this.style.textDecoration='none'; this.style.color='#f8f9fa'">Chính sách đổi trả</a></p>
                    <p><a href="#" style="color: #f8f9fa; text-decoration: none;" onmouseover="this.style.textDecoration='underline'; this.style.color='#ffc107'" onmouseout="this.style.textDecoration='none'; this.style.color='#f8f9fa'">Chính sách bảo mật</a></p>
                    <p><a href="#" style="color: #f8f9fa; text-decoration: none;" onmouseover="this.style.textDecoration='underline'; this.style.color='#ffc107'" onmouseout="this.style.textDecoration='none'; this.style.color='#f8f9fa'">Chính sách giao hàng</a></p>
                </div>
            </div>

            <!-- Bản đồ -->
            <div style="margin-top: 40px;">
                <h5 style="margin-bottom: 15px;">Vị trí cửa hàng</h5>
                <iframe src="https://www.google.com/maps?q=140+Lê+Trọng+Tấn,+Tân+Phú,+TP+HCM&output=embed"
                        style="width: 100%; height: 250px; border: 0; border-radius: 8px;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>

            <!-- Copyright & Payment -->
            <div style="margin-top: 30px; text-align: center;">
                <p style="margin-bottom: 10px;">© Bản quyền © 2025 PetShop. Bản đồ chỉ mang tính minh họa.</p>
            </div>
        </div>
    </footer>
    <!-- FOOTER -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
