@model List<tblHoaDon>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thống kê doanh thu</h2>
<form method="get" class="form-inline mb-3">
    <label class="mr-2">Từ ngày:</label>
    <input type="date" name="from" value="@ViewBag.From" class="form-control mr-3" />
    <label class="mr-2">Đến ngày:</label>
    <input type="date" name="to" value="@ViewBag.To" class="form-control mr-3" />
    <button class="btn btn-primary">Xem</button>
</form>
<div>
    <h4 class="m-0">Tổng doanh thu:<span>@String.Format("{0:#,##0} đ", ViewBag.TongDoanhThu)</span> </h4>
</div>
<table class="table table-bordered">
    <tr style="background:#f2f2f2; font-weight:bold;">
        <td>Mã HĐ</td>
        <td>Khách hàng</td>
        <td>Ngày lập</td>
        <td>Tổng tiền</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaHD</td>
            <td>@item.tblKhachHang.TenKH</td>
            <td>@item.NgayLap.Value.ToString("dd/MM/yyyy")</td>
            <td>@String.Format("{0:#,##0} đ", item.TongTien)</td>
        </tr>
    }
</table>

