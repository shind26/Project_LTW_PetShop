@model List<LapTrinhWeb.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBH.cshtml";
}

<div class="container py-4">

    <!-- Alert -->
    @if (TempData["ThongBao"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["ThongBao"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Loi"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <h2 class="fw-bold mb-4">Giỏ hàng của bạn</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Giỏ hàng trống. Vui lòng thêm sản phẩm.
        </div>
        <a href="/Home/Index" class="btn btn-primary">Quay lại mua sắm</a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ảnh</th>
                        <th>Sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.AnhDaiDien" class="img-thumbnail" style="width:90px; height:90px; object-fit:cover;" />
                            </td>
                            <td>
                                <strong>@item.TenSP</strong><br />
                                <span class="text-muted fst-italic">@item.LoaiSanPham</span>
                            </td>
                            <td>@String.Format("{0:N0} VNĐ", item.GiaBan)</td>
                            <td style="width:130px;">
                                <form action="/Cart/CapNhatSoLuong" method="post" class="d-flex">
                                    <input type="hidden" name="maSP" value="@item.MaSP" />
                                    <input type="number" name="soLuong" value="@item.SoLuong"
                                           min="1"
                                           class="form-control form-control-sm me-2" />
                                    <button class="btn btn-sm btn-success">OK</button>
                                </form>
                            </td>
                            <td>
                                <strong>@String.Format("{0:N0} VNĐ", item.ThanhTien)</strong>
                            </td>
                            <td>
                                <a href="/Cart/XoaSanPham?maSP=@item.MaSP"
                                   class="btn btn-danger btn-sm">
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <a href="/Cart/XoaGioHang" class="btn btn-danger">Xóa toàn bộ</a>

            <div class="text-end">
                <h4 class="fw-bold">Tổng tiền: @String.Format("{0:N0} VNĐ", ViewBag.TongTien)</h4>
                <a href="/Cart/DatHang" class="btn btn-primary btn-lg mt-2 px-4">Đặt hàng</a>
            </div>
        </div>
    }
</div>


